---
import PictureResponsive from "../components/PictureResponsive";
import SwiperSlider from "../components/SwiperSlider";

//Data fetching example: https://docs.astro.build/en/guides/data-fetching/
const response = await fetch(
  "http://hipsum.co/api/?type=hipster-centric&sentences=4",
);
const data = await response.json();
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
  </head>
  <body>
    <div class="cncc-container bg-slate-50 px-8 pb-32 pt-8 text-justify">
      <h1 class="py-8 text-center text-8xl">CNCC Override Theme 1.0</h1>
      <p class="mx-auto max-w-2xl pb-24 text-center">{data}</p>
      <h2 class="pb-8 text-center text-4xl">Picture Responsive</h2>
      <PictureResponsive
        childClass="mb-16 w-full h-auto"
        imageType="fluid"
        domain="media.allure.com"
        copilotid="6073267d482d54c341164d05"
        width={1920}
        widthList={[480, 960, 1440, 1920]}
        height={359}
        fileName={"clouds"}
        alttext={"This is some alt text"}
        loading={"lazy"}
      />
      <h2 class="pb-8 text-center text-4xl">Swiper Slider</h2>
      <SwiperSlider client:load />
    </div>
  </body>
</html>
